package components

import (
	"arabica/internal/models"
	"arabica/internal/web/bff"
)

// RoasterContent renders roaster details inside a card
templ RoasterContent(roaster *models.Roaster) {
	<div class="feed-content-box-sm">
		<div class="text-base mb-2">
			<span class="font-bold text-brown-900">{ roaster.Name }</span>
		</div>
		<div class="text-xs text-brown-600 mt-1 flex flex-wrap gap-x-2 gap-y-0.5">
			if roaster.Location != "" {
				<span class="inline-flex items-center gap-0.5">ğŸ“ { roaster.Location }</span>
			}
			if roaster.Website != "" {
				if safeWebsite := bff.SafeWebsiteURL(roaster.Website); safeWebsite != "" {
					<span class="inline-flex items-center gap-0.5">
						ğŸ”— <a href={ templ.SafeURL(safeWebsite) } target="_blank" rel="noopener noreferrer" class="text-brown-800 hover:underline">{ safeWebsite }</a>
					</span>
				}
			}
		</div>
	</div>
}
