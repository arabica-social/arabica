// Helper function to get string value from bean (handles nil case)
func getStringValue(entity interface{}, field string) string {
	if entity == nil {
		return ""
	}

	switch e := entity.(type) {
	case *models.Bean:
		switch field {
		case "name":
			return e.Name
		case "origin":
			return e.Origin
		case "process":
			return e.Process
		case "description":
			return e.Description
		}
	case *models.Grinder:
		switch field {
		case "name":
			return e.Name
		case "notes":
			return e.Notes
		}
	case *models.Brewer:
		switch field {
		case "name":
			return e.Name
		case "brewer_type":
			return e.BrewerType
		case "description":
			return e.Description
		}
	case *models.Roaster:
		switch field {
		case "name":
			return e.Name
		case "location":
			return e.Location
		case "website":
			return e.Website
		}
	}

	return ""
}
